# Server Configuration
HOST=0.0.0.0
PORT=5000
LOG_LEVEL=INFO

# Upload Directory
UPLOAD_DIR=uploads

# OCR Configuration
OCR_ENABLED=true
OCR_LANG=eng+spa+nld
OCR_OEM=3
OCR_PSM=6
OCR_MIN_CONF=40

# ML Detector (Optional)
USE_ML_DETECTOR=false
ML_MODEL_PATH=models/document_boundary.onnx
ML_CONF_THRESHOLD=0.25
ML_IOU_THRESHOLD=0.50

# Backend Integration (Optional)
# Path mapping for backend uploads directory
BACKEND_UPLOAD_PREFIX=/path/to/backend/uploads

# Debug (Development only)
SAVE_DEBUG_IMAGES=false
DEBUG_DIR=debug/
